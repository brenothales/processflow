<div class="container-fluid">
  <div class="row-fluid">
    <%= form_for :task do |f| %>
        <div class="span10">
           <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, :class => 'form-control', :style=>'' %>
              <span id="errorForName"></span>
           </div>
           <div class="field">
              <%= f.label :description %><br/>
              <%= f.text_area :description , :class => 'form-control', :style=>'height:147px;' %>
           </div>
        </div>
        <div class="span2">
           <div class="field">
              <%= f.label :priority %><br>
              <%= f.select(:priority, ['High','Medium','Low'], {}, prompt: true, :class => 'form-control')  %>
           </div>
           <div class="field">
              <%= f.label :effort %><br>
              <%= f.number_field :effort, autofocus: true, :class => 'form-control' %>
           </div>
           <div class="field">
              <%= f.label :assigned %><br>
              <%= f.select(:assigned, ["Nazrul", 'Jiko', 'Mahin'], {}, prompt: true, :class => 'form-control')  %>
           </div>
           <div class="field">
              <%= f.label :end_Date %><br>
              <%= f.text_field :endDate, autofocus: true, :class => 'form-control' %>
           </div>
        </div>
    <% end %>
  </div>
</div>

<style type="text/css">
   .span10{
      width: 375px;
      float: left;
      margin-right: 10px;
   }
   .span2{
      width:125px;
      float: left;
   }
</style>

<script type="text/javascript">
   $(document).ready(function(){
    $("#task_endDate").datepicker();
   });
</script>