<div class="task-item">
  <div class="pull-left content-left">
    <ul>
      <li class="task-name"> Add new task and bug through ajax submit </li>
      <li>
        <%= image_tag('date.png', :title => 'End Date') %>
        <span> 12/08/2014 </span>
      </li>
    </ul>
  </div>
  <div class="pull-right content-right">
    <ul>
      <li>
        <%= image_tag("task_#{p}.png", :title => 'Priority', :class => 'pull-right') %>
        <div class="clear-fix"> </div>
      </li>
      <li style="vertical-align: middle;">
        0.5h <%= image_tag('effort.png', :title => 'Effort') %>
      </li>
      <li>
        <span class="glyphicon-class"></span>
        <%= image_tag(current_user.image_url(:small_thumb), :class => 'img-circle assign-member', :title => "#{current_user.name}") if current_user.image? %>
        <a href="javascript:void(0);" class="btn-link" title="More"> ... </a>
      </li>
    </ul>
  </div>
  <div class="clear-fix"></div>
</div>