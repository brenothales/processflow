<div class="new-account">
  <h2>
    Sign up
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, :class => 'form-control' %>
      </div>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, :class => 'form-control'  %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control'  %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'  %>
      </div>

      <div>
        <%= f.label :country %>
        <%= f.select(:country, ['Bangladesh', 'India', 'Pakistan'], :class => 'form-control' )%>
      </div>

      <div>
        <%= f.label :zip %>
        <%= f.number_field :zip, :class => 'form-control'  %>
      </div>

      <div>
        <%= f.label :image %>
        <%= f.text_field :image, autofocus: true, :class => 'form-control'  %>
      </div>

      <div style="margin-top: 10px;">
        <%= f.submit "Sign up", :class => 'btn btn-primary btn-lg btn-block'  %>
      </div>
  <% end %>
  <div class="pull-right"> <%= render "devise/shared/links" %> </div>
</div>
