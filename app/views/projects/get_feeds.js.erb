$('.feed-list').html("<%= escape_javascript(render :partial => 'feeds', :locals => {:feeds => @feeds} ).html_safe %>");
$('.next, .previous').attr('data-offset','<%= @offset %>');
if($('.previous').attr('data-offset') == '0')
{
    $('.previous').addClass('hidden');
}
else
{
    $('.previous').removeClass('hidden');
}
if ( $('.feed-list ul li').length < 10 )
{
    $('.next').addClass('hidden');
}
else{
    $('.next').removeClass('hidden');
}



